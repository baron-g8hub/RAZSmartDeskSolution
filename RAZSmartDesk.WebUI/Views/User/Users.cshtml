@model RAZSmartDesk.WebUI.Models.UsersViewModel

@{
    ViewData["Title"] = "Users";
}

<h4><h1>@Model.CompanyName  <span>List of Users</span> </h1></h4>
<hr />

@if (Model.Entity.UserTypeId == 1)
{
    <ul class="nav">
        <li class="nav-item">
            <a class="btn btn-primary btn-sm" asp-controller="User" asp-action="Create">
                <i class="fas fa-circle-plus"></i>
                User
            </a>
        </li>
        @* <li class="nav-item" style="padding-top: 0px; padding-right: 5px; padding-bottom: 10px; padding-left: 5px;">
        <a class="btn btn-primary btn-sm" asp-controller="Transactions" asp-action="Transfer">
            <i class="fas fa-copy"></i>
            Transfer
        </a>
    </li> *@
    </ul>
}

<table class="table table-bordered table-sm">
    <thead class="table-light">
        <tr>
            <th scope="col">
                UserId
            </th>
            <th scope="col">
                Username
            </th>
            <th scope="col">
                Password
            </th>
            <th scope="col">
                UserType
            </th>
            <th scope="col">
                Company
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Entity.IsActive)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Entity.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity.CreatedDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Entity.UpdatedBy)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Entity.UpdatedDate)
            </th>
            @if (Model.Entity.UserTypeId == 1)
            {
                <th scope="col"> Options </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EntityList)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.UserTypeName)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                </td>
                @if (Model.Entity.UserTypeId == 1)
                {
                    <td scope="row" style="text-align: center;">
                        <a asp-controller="User" asp-action="Create" asp-route-id="@item.UserId">Edit</a> |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                        @* <form method="post">
                            <a class="btn btn-sm btn-outline-primary" asp-controller="User" asp-action="Create" asp-route-id="@item.UserId">
                                <i class="fas fa-edit"></i>
                            </a>
                        </form> *@
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
